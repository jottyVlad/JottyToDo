<Window x:Class="JottyToDo.WPF.windows.ActionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JottyToDo.WPF.windows"
        mc:Ignorable="d"
        Title="ActionWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="button_edit" Content="Редактировать" HorizontalAlignment="Center" Margin="0,149,0,0" VerticalAlignment="Top" Width="120" Visibility="Hidden"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Center" Margin="0,102,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged"/>
        <Button x:Name="button_add" Content="Добавление" HorizontalAlignment="Left" Margin="336,255,0,0" VerticalAlignment="Top" Width="120" Height="40" Click="Button_add_Click"/>

    </Grid>
</Window>
