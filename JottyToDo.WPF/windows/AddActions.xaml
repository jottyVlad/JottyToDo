        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JottyToDo.WPF.windows"
        mc:Ignorable="d"
        Title="AddActions" Height="450" Width="800">
    <Grid>
        <DatePicker x:Name="Time" HorizontalAlignment="Center" Margin="0,213,0,0" VerticalAlignment="Top" Width="192" Height="32"/>
        <TextBox x:Name="ActionNameText" HorizontalAlignment="Center" Height="32" Margin="0,151,0,0" TextWrapping="Wrap" Text="Название события" VerticalAlignment="Top" Width="192"/>
        <Button x:Name="button" Content="Добавить" HorizontalAlignment="Left" Margin="300,281,0,0" VerticalAlignment="Top" Width="192" Height="32" Click="Button_Click"/>

    </Grid>
</Window>
